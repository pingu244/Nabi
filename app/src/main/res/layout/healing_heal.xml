<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/sadLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sad_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAD 지수를\n알아보세요"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="나의 SAD 지수 :"
                android:textColor="#454870"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/sad_figure"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454870"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/sad_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/roundrectangle"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="17dp"
                android:paddingVertical="13dp"

                android:text="SAD 테스트 하기"
                android:textAlignment="center"
                android:textColor="#454870"
                android:textSize="16dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bdi_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우울증 정도를\n알아보세요"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="나의 우울증 정도 :"
                android:textColor="#454870"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/bdi_figure"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454870"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/bdi_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/roundrectangle"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="17dp"
                android:paddingVertical="13dp"

                android:text="BDI 검사 하기"
                android:textAlignment="center"
                android:textColor="#454870"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/sad_def"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/saddef_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp">

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="69dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계절성 정서장애(SAD)란?"
                android:textColor="#454870"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/sad_info_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle"
            android:orientation="vertical"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/sad_info_1_img"
                android:src="@drawable/sad_info_img_1"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/img_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="우울감 해소에 좋은 운동"
                android:textSize="20dp"
                android:textColor="#454870"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/sad_info_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle"
            android:orientation="vertical"
            android:layout_weight="1"
            android:elevation="5dp">

            <ImageView
                android:id="@+id/sad_info_2_img"
                android:src="@drawable/sad_info_img_2"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/img_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="우울감을 줄여주는 음식"
                android:textSize="20dp"
                android:textColor="#454870" />


        </LinearLayout>

</LinearLayout>

</LinearLayout>