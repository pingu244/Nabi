<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="지난주부터 오늘까지 자신의 상태를 \n가장 잘 나타냈다고 생각되는 항목을 \n한 가지 골라주세요."
        android:textColor="@color/indigo_pnt"/>

    <View
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E2E2E2"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/bdi_2"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/q2_score_0"
                android:paddingLeft="10dp"
                android:buttonTint="#454870"
                android:textSize="15dp"
                android:text="나는 앞날에 대해 별로 낙담하지 않는다"
                style="@style/customTextViewFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/q2_score_1"
                android:paddingLeft="10dp"
                android:buttonTint="#454870"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                android:text="나는 앞날에 대해 용기가 나지 않는다."
                style="@style/customTextViewFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/q2_score_2"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:buttonTint="#454870"
                android:text="나는 앞날에 대해 기대할 것이 아무것도 없다고 느낀다"
                style="@style/customTextViewFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/q2_score_3"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:buttonTint="#454870"
                android:text="나의 앞날은 아주 절망적이고 나아질 가망이 없다고 느낀다."
                style="@style/customTextViewFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <FrameLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="17dp">
        <Button
            android:id="@+id/second_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#00ff0000"
            android:text="&lt; 이전"
            android:textSize="14dp" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="2/21"
            android:textColor="@color/indigo_pnt" />
        <Button
            android:id="@+id/second_next"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="다음 >"/>

    </FrameLayout>

</LinearLayout>