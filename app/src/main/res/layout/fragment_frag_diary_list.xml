<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragDiary_list"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/btnClear"
            android:width="0dp"
            android:height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnclear"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"  />
        <ImageButton
            android:id="@+id/btnLittleCloudy"
            android:width="0dp"
            android:height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnlittlecloud"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"  />

        <ImageButton
            android:id="@+id/btnCloudy"
            android:width="0dp"
            android:height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btncloudy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"  />



        <ImageButton
            android:id="@+id/btnRain"
            android:width="0dp"
            android:height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnrain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"  />

        <ImageButton
            android:id="@+id/btnSnow"
            android:width="0dp"
            android:height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnsnow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"  />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맑은 날"
            android:textSize="30dp"/>

        <Spinner
            android:layout_gravity="right|center"
            android:id="@+id/spinner_month"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>






</LinearLayout>