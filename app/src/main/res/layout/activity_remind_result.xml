<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2DCE2">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/remind_result_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/diary_result_back"
                android:background="#00000000"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정보고서"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="30dp"/>
        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_heart"/>
            <LinearLayout
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기분 변화 그래프"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/calender_frame_rectangle"
                android:backgroundTint="#C7FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/remind_linechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 감정"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:padding="7dp"
                    android:background="@drawable/calender_frame_rectangle"
                    android:backgroundTint="#C7FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_weight="7"
                        android:id="@+id/remind_piechart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/remind_pie_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기쁨"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/remind_pie_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평화"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/remind_pie_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="힘찬"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/remind_pie_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="슬픔"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/remind_pie_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분노"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/remind_pie_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="두려움"
                            android:textSize="15dp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 감정"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:background="@drawable/calender_frame_rectangle"
                    android:backgroundTint="#C7FFFFFF"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="산책"
                        android:textSize="15dp"
                        android:layout_gravity="center|top"
                        android:layout_marginBottom="5dp"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/graph_temp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000걸음"
                            android:textSize="15dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/calender_frame_rectangle"
            android:backgroundTint="#C7FFFFFF"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>