<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Healing.BDI.BdiTestResult_Activity"
    android:orientation="vertical"
    android:background="#8FD3CD">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bdiResult_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:src="@drawable/exit_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="BDI 검사"
            android:textColor="@color/indigo_pnt"
            android:textSize="20dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/roundrectangle"
        android:elevation="3dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="당신의 우울증 정도는"/>

                <TextView
                    android:id="@+id/tv_bdiResult"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text=""/>

                <!--아이콘-->
                <ImageView
                    android:id="@+id/bdi_result_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="108dp"
                    android:layout_gravity="center"/>

                <View
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#E2E2E2"/>

                <TextView
                    android:id="@+id/tv_bdiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="멘트"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/bdi_progress"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:max="63"
                        android:layout_marginHorizontal="20dp"
                        style="?android:attr/progressBarStyleHorizontal"/>

                    <TextView
                        android:id="@+id/bdi_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="점수"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / 63"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/cnt_1"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="1번 문항 : "/>

                <TextView
                    android:id="@+id/cnt_2"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="2번 문항 : "/>

                <TextView
                    android:id="@+id/cnt_3"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="3번 문항 : "/>

                <TextView
                    android:id="@+id/cnt_4"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="4번 문항 : "/>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <Button
            android:id="@+id/btnRetest"
            android:background="@drawable/rect_btn"
            android:backgroundTint="@color/white"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="다시 검사하기"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="7dp"/>

        <Button
            android:id="@+id/btnQuit"
            android:background="@drawable/rect_btn"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="마치기"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

</LinearLayout>