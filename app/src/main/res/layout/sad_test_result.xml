<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CD2DE"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:src="@drawable/exit_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="SAD 테스트"
            android:fontFamily="@font/scdream5"
            android:textColor="@color/indigo_pnt"
            android:textSize="20dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/roundrectangle"
        android:elevation="3dp">

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="당신의 SAD 지수는"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/sad_result"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/scdream5"
                android:textSize="32dp"/>

            <!--아이콘-->
            <ImageView
                android:id="@+id/sad_result_icon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="118dp"/>
        </LinearLayout>

        <View
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="2px"
            android:background="#E2E2E2"/>

        <TextView
            android:id="@+id/sad_mention"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="25dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <Button
            android:id="@+id/btnRetest"
            android:background="@drawable/rect_btn"
            android:backgroundTint="@color/white"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="다시 검사하기"
            style="@style/customButtonFontStyle"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="7dp"/>

        <Button
            android:id="@+id/btnExit"
            android:background="@drawable/rect_btn"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="마치기"
            style="@style/customButtonFontStyle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>




</LinearLayout>